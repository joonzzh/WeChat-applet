<!--pages/fabu/fabu.wxml-->
<view class='text'>
  <text>发布信息</text>
</view>

<form bindsubmit='formSubmit'>
  <!--input-->
<view class='section' >
    <!--<text>标题 </text>-->
      <view style='width:90%;margin:10rpx auto 0;'>
        标题：<input name='input' placeholder='单行输入' auto-focus style='margin-top:20rpx; border:1rpx solid #ddd; width:100%;border-radius: 4px;'/>
      </view>
</view>

<view class='section' >
    <!--<text>联系方式 </text>-->
      <view style='width:90%;margin:10rpx auto 0;'>
         联系方式(至少填写一个)：<input name='input2' class='sss' placeholder='QQ' style='margin-top:20rpx; border:1rpx solid #ddd; width:100%;border-radius: 4px;'/>
        <input name='input3' class='sss' placeholder='微信号' style='margin-top:20rpx; border:1rpx solid #ddd; width:100%;border-radius: 4px;'/>
        <input name='input4' class='sss' placeholder='电话' style='margin-top:20rpx; border:1rpx solid #ddd; width:100%;border-radius: 4px;'/>
      </view>
</view>
  <!--textarea-->
  <view class='section'>
    <!--<text>内容</text>-->
      <view style='width:90%;margin:10rpx auto 0;'>
         内容：<textarea name='textarea' bindblur='bindText' placeholder='多行输入' maxlength='-1' style='margin-top:20rpx;border:1rpx solid #ddd;width:100%;border-radius: 4px;'/>
      </view>
  </view>
  <!--button-->
  <view style='margin:20px;'></view>
  <view class='btn-area' style='margin-top:55px;'>
    <button class='btn'hover-class='btn-hover' form-type='submit'>确认发布</button>
  </view>
</form>

